{
  "name": "Galdae",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "cm": "cz",
    "android:dev": "cd android && ./gradlew app:installDevDebug -PreactNativeDevServerPort=8081",
  "android:prod": "cd android && ./gradlew app:installProdDebug -PreactNativeDevServerPort=8081",

    "ios:dev": "ENVFILE=.env.development react-native run-ios --scheme Galdae-Dev",
    "ios:prod": "ENVFILE=.env.production react-native run-ios --scheme Galdae-Prod",

    "build:android:dev": "ENVFILE=.env.development cd android && ./gradlew assembleDevDebug",
    "build:android:prod": "ENVFILE=.env.production cd android && ./gradlew assembleProdRelease",

    "build:ios:dev": "ENVFILE=.env.development xcodebuild -workspace ios/Galdae.xcworkspace -scheme Galdae-Dev -configuration Debug -sdk iphonesimulator",
    "build:ios:prod": "ENVFILE=.env.production xcodebuild -workspace ios/Galdae.xcworkspace -scheme Galdae-Prod -configuration Release -sdk iphonesimulator",

    "clean:metro": "watchman watch-del-all || true && rm -rf $TMPDIR/metro-* && rm -rf node_modules/.cache/metro",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && xcodebuild -alltargets clean"
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/plugin-transform-runtime": "^7.26.8",
    "@bam.tech/react-native-image-resizer": "^3.0.11",
