# Resolve react_native_pods.rb with node to allow for hoisting
def node_require(script)
  # Resolve script with node to allow for hoisting
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

node_require('react-native/scripts/react_native_pods.rb')
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, '15.1'

prepare_react_native_project!

setup_permissions([
  # 'AppTrackingTransparency',
  # 'Bluetooth',
  # 'Calendars',
  # 'CalendarsWriteOnly',
  'Camera',
  # 'Contacts',
  # 'FaceID',
  # 'LocationAccuracy',
  # 'LocationAlways',
  # 'LocationWhenInUse',
  # 'MediaLibrary',
  # 'Microphone',
  # 'Motion',
  # 'Notifications',
  'PhotoLibrary',
  'PhotoLibraryAddOnly',
  # 'Reminders',
  # 'Siri',
  # 'SpeechRecognition',
  # 'StoreKit',
])

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

# Map custom build configurations to Debug/Release for CocoaPods
project 'Galdae', {
  'DevDebug' => :debug,
  'DevRelease' => :release,
  'ProdDebug' => :debug,
  'ProdRelease' => :release
}

target 'Galdae' do
  config = use_native_modules!
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'KakaoSDKAuth'
  pod 'RNFS', :path => '../node_modules/react-native-fs'
 
  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # 1) RN 기본 후크는 "한 번만" 호출 (RN 0.77은 단일 인자)
    react_native_post_install(installer)

    # 2) Pods 프로젝트의 모든 타깃에 대해 스크립트 샌드박싱 OFF
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |bc|
        bc.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      end
    end

    # 3) (추가 권장) 사용자 프로젝트(aggregate)에도 동일 적용
    installer.aggregate_targets.each do |agg|
      agg.user_project.build_configurations.each do |bc|
        bc.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      end
    end

    # 4) Hermes dSYM 복사 (Crashlytics/symbolication용)
    installer.pods_project.targets.each do |target|
      if target.name == 'hermes-engine'
        target.build_configurations.each do |config|
          config.build_settings['STRIP_STYLE'] = 'non-global'
        end
      end
    end

    # 5) 빌드 속도 최적화 설정
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Debug 빌드에서 컴파일 최적화 비활성화 (빌드 속도 향상)
        if config.name.include?('Debug')
          config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '0'
          config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
          config.build_settings['SWIFT_COMPILATION_MODE'] = 'incremental'
        end

        # 병렬 빌드 활성화
        config.build_settings['COMPILER_INDEX_STORE_ENABLE'] = 'NO'

        # Clang 모듈 캐싱 활성화 (빌드 속도 향상)
        config.build_settings['CLANG_ENABLE_MODULE_DEBUGGING'] = 'NO'

        # dSYM 생성 제어 (Debug에서는 비활성화)
        if config.name.include?('Debug')
          config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf'
        else
          config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
        end
      end
    end

  end
end